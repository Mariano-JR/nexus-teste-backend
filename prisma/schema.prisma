generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Tokens {
  BRL
  BTC
  ETH
}

enum TypeTransactions {
  DEPOSIT
  SWAP_IN
  SWAP_OUT
  SWAP_FEE
  WITHDRAWAL
}

model User {
  userId          String          @id @default(uuid())
  email           String          @unique
  password        String
  createdAt       DateTime        @default(now())

  wallet          Wallet?
}

model Wallet {
  walletId        String          @id @default(uuid())

  userId          String          @unique
  user            User            @relation(fields: [userId], references: [userId])

  brlBalance      Decimal         @default(0) @db.Decimal(18,8)
  btcBalance      Decimal         @default(0) @db.Decimal(18,8)
  ethBalance      Decimal         @default(0) @db.Decimal(18,8)

  createdAt       DateTime        @default(now())

  transactions    Transactions[]
}

model Transactions {
  transactionId   String          @id @default(uuid())

  walletId        String          @unique
  wallet          Wallet          @relation(fields: [walletId], references: [walletId])

  type            TypeTransactions
  token           Tokens

  amount          Decimal         @db.Decimal(18,8)
  previousBalance Decimal         @db.Decimal(18,8)
  newBalance      Decimal         @db.Decimal(18,8)

  createdAt       DateTime        @default(now())

  @@index([walletId, createdAt])
}